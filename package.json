{
	"name": "react-typescript",
	"version": "1.0.0",
	"type": "module",
	"description": "React TypeScript on Replit, using Vite bundler",
	"scripts": {
		"dev": "vite",
		"prettier-watch": "onchange --await-write-finish 12000 \"**/*\" 'src/**/*.jsx' -- prettier --write --ignore-unknown {{changed}}",
		"fm": "prettier --write 'src/**/*.jsx'",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"prepare": "husky install"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@tailwindcss/aspect-ratio": "^0.4.0",
		"@tailwindcss/forms": "^0.5.2",
		"@tailwindcss/line-clamp": "^0.4.0",
		"@tailwindcss/typography": "^0.5.4",
		"@types/react": "^18.0.15",
		"@types/react-dom": "^18.0.6",
		"@vitejs/plugin-react": "^2.0.0",
		"autoprefixer": "^10.4.8",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"onchange": "^7.1.0",
		"postcss": "^8.4.16",
		"prettier": "^2.7.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-toggle-dark-mode": "^1.1.0",
		"tailwindcss": "^3.1.8",
		"typescript": "^4.7.4",
		"typescript-language-server": "^0.11.2",
		"vite": "^3.0.4"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,jsx,css,md}": "prettier --write"
	}
}
